	chaine [strcspn(chaine,"\n")]='\0';
	return chaine;
}
int longueur(char*chaine){
int	comp=0;
	while(chaine[comp]!='\0')
	comp++;
	return comp;
}
void charger_tab(char*p,char tab[]){
	int i=0;
for(i=0;p[i]!='\0';i++){
	if(p[i]!='\0'){
		tab[i]= p[i];
i++;
	}
}
tab[i]='\0';
}
void inverser_tab(char tab[],char t[],int m){
	int i;
	for(i=m-1;i>=0;i--){
	 t[i]=tab[m-1-i];
	}
t[m]='\0';
}
void afficher_tab(char tab[],int m){
	for (int i=0;i<=m;i++)
printf("%c \n",tab[i]);

}


	int main()
	{
